<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/default_image"
            android:id="@+id/request_profile_image"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_request_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingTop="5dp"
                android:text="display name"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Display user status"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/txt_request_profile_status"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:textSize="16sp"
                    android:text="Add"
                    android:textColor="@color/white"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/btn_accept_request"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button_friend"/>
                <Button
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:textSize="16sp"
                    android:text="Cancel"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/btn_cancel_request"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"/>

            </LinearLayout>

        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>