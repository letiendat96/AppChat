<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ltd.admin.appchat.Profile.ProfileActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/banner"
        android:scaleType="fitXY"
        android:id="@+id/img_cover_photo"/>
    
    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/profile_visit_user_image"
        android:src="@drawable/default_image" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_visit_user_image"
        android:layout_marginTop="10dp"
        android:text="User name"
        android:textSize="20sp"
        android:id="@+id/txt_display_user_name"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/txt_display_user_name"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/txt_display_user_status"
        android:text="User status"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="3"
        android:id="@+id/layout_profile"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhắn tin"
            android:background="@color/green_500"
            android:textColor="@color/white"
            android:id="@+id/btn_send_msg"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kết bạn"
            android:background="@color/red_600"
            android:textColor="@color/white"
            android:id="@+id/btn_make_friend_request"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_cancel_friend_request"
            android:background="@color/blue_600"
            android:text="Hủy kết bạn"
            android:textColor="@color/white"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>
