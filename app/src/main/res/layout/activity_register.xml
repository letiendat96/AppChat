<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.ltd.admin.appchat.RegisterAccount.RegisterActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/msg"
        android:layout_marginTop="76dp"
        android:id="@+id/img_default"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <include layout="@layout/app_bar_layout"
    android:id="@+id/register_toolbar"/>

<EditText
    android:id="@+id/edit_text_name_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="name"
    android:inputType="textAutoCorrect"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="300dp"
    android:drawablePadding="16dp"
    android:padding="10dp"
    android:drawableTint="@android:color/holo_blue_dark"
    android:drawableLeft="@drawable/icon_user_login"
    android:textColor="@android:color/black"
    android:textColorHint="@color/colorPrimary"
    android:background="@drawable/edt_backdground"
    android:layout_centerHorizontal="true"/>

<EditText
    android:id="@+id/edit_text_email_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="email"
    android:inputType="textEmailAddress"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:drawablePadding="16dp"
    android:padding="10dp"
    android:drawableTint="@android:color/holo_blue_dark"
    android:drawableLeft="@drawable/ic_email_black_24dp"
    android:textColor="@android:color/black"
    android:textColorHint="@color/colorPrimary"
    android:background="@drawable/edt_backdground"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/edit_text_name_id"
    android:layout_centerHorizontal="true" />

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:background="@color/amber_400"
    android:text="Register"
    android:textColor="@color/brown_900"
    android:id="@+id/btn_register"/>

</RelativeLayout>
